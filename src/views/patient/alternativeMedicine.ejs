<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alternative Medicines</title>
</head>
<body>
    <h1>Alternative Medicines for <%= medicineName %></h1>

    <% if (alternatives.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Medicine Name</th>
                    <th>Dosage</th>
                    <th>Description</th>
                    <th>Medicinal Use</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% alternatives.forEach((alternative) => { %>
                    <tr>
                        <td><%= alternative.name %></td>
                        <td><%= alternative.dosage %></td>
                        <td><%= alternative.description %></td>
                        <td><%= alternative.medUse %></td>
                        <td><%= alternative.price %></td>
                        <td>
                            <form action="/patient/addToCart" method="POST">
                                <input type="hidden" name="medicineName" value="<%= alternative.name %>">
                                <input type="hidden" name="medicinePrice" value="<%= alternative.price %>">
                                <input type="hidden" name="quantity" value="1">
                                <button type="submit">Add to Cart</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No alternative medicines found for <%= medicineName %>.</p>
    <% } %>

    <a href="/patient/shoppingCart"><button>View Shopping Cart</button></a> 
    <a href="/logout"><button>Logout</button></a> 
</body>
</html>
