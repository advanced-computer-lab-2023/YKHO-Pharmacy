<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>

</head>
<body>
    <header>
        <h1>Your Orders</h1>
    </header>

    <main>
        <section id="orders">
            <% if (orders.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Medicine Name</th>
                            <th>Quantity</th>
                            <th>Delivery Address</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order._id %></td>
                                <% order.shoppingCart.forEach(item => { %>
                                    <td><%= item.medicineName %></td>
                                    <td><%= item.quantity %></td>
                                <% }); %>
                                <td><%= order.deliveryAdd %></td>
                                <td><%= order.paymentMethod %></td>
                                <td><%= order.status %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>You have no orders.</p>
            <% } %>
        </section>
    </main>

    <footer>
        <!-- Add any footer content or links to scripts here -->
    </footer>
</body>
</html>
