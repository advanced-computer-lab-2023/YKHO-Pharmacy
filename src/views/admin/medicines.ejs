<!DOCTYPE html>
<html>
<head>
    <title>Medicine List</title>
</head>
<body>
    <h1>Medicine List</h1>
    
    <form action="/admin/searchMedicines" method="GET">
        <input type="text" name="search" placeholder="Search by medicine name">
        <button type="submit">Search</button>
    </form>

    <form action="/admin/medicines/filter" method="GET">
        <input type="text" name="medUse" placeholder="Filter by Medicinal Use" />
        <button type="submit">Filter</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Dosage</th>
                <th>Description</th>
                <th>Medicinal Use</th>
                <th>Detail</th>
                <th>Quantity</th>
                <th>Sales</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% medicines.forEach(medicine => { %>
                <tr>
                    <td><%= medicine.name %></td>
                    <td><%= medicine.dosage %></td>
                    <td><%= medicine.description %></td>
                    <td><%= medicine.medUse %></td>
                    <td><%= medicine.detail %></td>
                    <td><%= medicine.quantity %></td>
                    <td><%= medicine.sales %></td>
                    <td><%= medicine.price %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
